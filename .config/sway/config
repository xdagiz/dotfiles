set $volumeNoti "Volume $(pactl get-sink-volume @DEFAULT_SINK@ | awk '/%/ {print $5}' | head -n1)" -h string:x-canonical-private-synchronous:volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2% && notify-send $volumeNoti
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2% && notify-send $volumeNoti
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && notify-send "Mute toggled" -h string:x-canonical-private-synchronous:volume

